<div class="container">

  <h1>ADD ANIMAL TO ADOPTIONS</h1>
  <form action='/adoptions/add' method="POST" enctype="multipart/form-data">

    <div class="AddAnimal">

      <div class="col-md-12">
        <label>
          Name:
        <input name='name' type="text" required/>
      </label>
      </div>

      <div class="col-md-12">
        <label>
        Gender:
        <input name='gender' type="text" required/>
      </label>
      </div>

      <div class="col-md-12">
        <label>
        Age:
        <input name='age' type="text" required/>
      </label>
      </div>

      <div class="col-md-12">
        <label>
        ANIMAL:

        <select name='animal' required>
          <option value="dog">Dog</option>
          <option value="cat">Cat</option>
        </select>
      </label>
      </div>



      <div class="col-md-12">
        <label>
        Size:

        <select name='size' required>
          <option value="small">Small</option>
          <option value="medium">Medium</option>
          <option value="large">Large</option>

        </select>
      </label>
      </div>


      <div class="col-md-12">
        <label>
        Bio:
        <input style='width: 90%' name='bio' type="text" required/>
      </label>
      </div>

      <div class="col-md-12">
        <input name='img' type="file" required/>
      </div>

      <div class="col-md-12">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </div>
  </form>



  <hr>
